{
  "manifest_version": 3,
  "name": "Jarvis Guardian",
  "version": "1.0",
  "description": "AI-Powered Cybersecurity Assistant",
  "permissions": ["storage", "tabs", "activeTab", "scripting"],
  "host_permissions": ["http://127.0.0.1:5000/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
