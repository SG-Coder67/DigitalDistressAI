{
  "manifest_version": 3,
  "name": "Jarvis Guardian",
  "version": "1.0",
  "description": "Real-time URL safety monitoring",
  "permissions": ["tabs", "notifications", "webNavigation", "storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>", "http://127.0.0.1:5000/*"],
  "background": { "service_worker": "background.js" },
  "action": { "default_popup": "popup.html" }
}
